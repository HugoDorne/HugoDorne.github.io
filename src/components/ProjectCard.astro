---
interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}

const { href, title, body, img } = Astro.props;
---

<!-- TODO Add GitHub / GitLab / deployment link -->
<div class="flex w-6/12 flex-col overflow-hidden rounded-3xl bg-red-950 shadow-lg shadow-black">
	<img src={img} alt={title} class="w-full" />
	<div class="p-8">
		<h2 class="text-2xl font-semibold">
			{title}
		</h2>
		<p class="mb-4 font-light">
			{body}
		</p>
		<div class="flex gap-2">
			<slot />
		</div>
	</div>
</div>
