---
interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
	tags: string[];
}

const { href, title, body, img, tags } = Astro.props;
---

<div class="flex flex-col w-6/12 rounded-3xl bg-red-950 shadow-lg shadow-black overflow-hidden">
	<img src={img} alt={title} class="w-full" />
	<div class="p-8">
		<h2 class="text-2xl font-semibold">
			{title}
		</h2>
		<p class="font-light mb-4">
			{body}
		</p>
		<div class="flex gap-2">
			{
				tags.map((tag) => (
					<span class="rounded-full bg-red-800 border-2 border-solid border-red-300 text-red-300 px-2">
						{tag}
					</span>
				))
			}
		</div>
	</div>
</div>
