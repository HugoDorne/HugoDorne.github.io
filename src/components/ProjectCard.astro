---
import Icon from "astro-icon";

interface Props {
	title: string;
	body: string;
	hrefGit: string;
	hrefWeb: string;
	git: "github" | "gitlab";
	img: string;
}

const { title, body, img, hrefGit, hrefWeb, git } = Astro.props;
---

<div class="flex w-6/12 flex-col overflow-hidden rounded-3xl bg-red-950/90 shadow-lg shadow-black">
	<img src={img} alt={title} class="w-full" />
	<div class="p-8">
		<div class="flex justify-between">
			<h2 class="text-2xl font-semibold">
				{title}
			</h2>
			<div class="flex gap-2">
				<a href={hrefGit} target="_blank" class="flex gap-2 hover:underline">
					{
						git === "github" ? (
							<>
								<span class="my-auto">GitHub</span>
								<Icon name="mdi:github" class="my-auto h-8 w-8" />
							</>
						) : (
							<>
								<span class="my-auto">GitLab</span>
								<Icon name="uim:gitlab-alt" class="my-auto h-8 w-8" />
							</>
						)
					}
				</a>
				{
					hrefWeb === "" ? (
						""
					) : (
						<a href={hrefWeb} target="_blank" class="flex gap-2 hover:underline">
							<span class="my-auto">Web</span>
							<Icon name="mdi:web" class="my-auto h-8 w-8" />
						</a>
					)
				}
			</div>
		</div>
		<p class="mb-4 font-light">
			{body}
		</p>
		<div class="flex gap-2">
			<slot />
		</div>
	</div>
</div>
