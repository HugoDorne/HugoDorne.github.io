---
import SectionLayout from "../../layouts/SectionLayout.astro";
---

<!-- TODO Add icons -->
<SectionLayout id="stack" title="My stack">
	<div class="flex flex-row justify-center gap-8 px-8">
		<div class="flex w-full flex-col gap-4 rounded-3xl border-2 border-red-300 p-4">
			<h3 class="font-semi-bold text-center text-2xl">Frontend</h3>
			<div>
				<h4>Languages</h4>
				<div class="flex flex-row gap-2">
					<span>TS</span>
					<span>JS</span>
					<span>HTML</span>
					<span>CSS</span>
					<span>SCSS</span>
				</div>
			</div>
			<div>
				<h4>Frameworks</h4>
				<div class="flex flex-row gap-2">
					<span>Angular</span>
					<span>Astro</span>
				</div>
			</div>
			<div>
				<h4>Librairies</h4>
				<div class="flex flex-row gap-2">
					<span>Bootstrap</span>
					<span>Akita</span>
					<span>Jest</span>
					<span>Cypress</span>
					<span>Webapck</span>
					<span>Prettier</span>
				</div>
			</div>
		</div>
		<div class="flex w-full flex-col gap-4 rounded-3xl border-2 border-red-300 p-4">
			<h3 class="font-semi-bold text-center text-2xl">Backend</h3>
			<div>
				<h4>Languages</h4>
				<div class="flex flex-row gap-2">
					<span>Java</span>
					<span>SQL</span>
					<span>Python</span>
				</div>
			</div>
			<div>
				<h4>Frameworks & Tools</h4>
				<div class="flex flex-row gap-2">
					<span>Spring Boot</span>
					<span>Hibernate</span>
					<span>Docker</span>
					<span>Maven</span>
					<span>Ansible</span>
					<span>GitLab CI</span>
				</div>
			</div>
			<div>
				<h4>Databases</h4>
				<div class="flex flex-row gap-2">
					<span>PostgreSQL</span>
					<span>MySQL</span>
					<span>OracleDB</span>
				</div>
			</div>
		</div>
	</div>
</SectionLayout>
